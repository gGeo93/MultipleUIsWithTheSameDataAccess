<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperheroesMvcUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SuperheroesMvcUI.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="wrapper">
        <header>
            <div id="badge">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">SuperheroesMvcUI</a>
            </div>
            <ul id="navlist">
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SuperHeroes">Superheroes</a>
                </li>
            </ul>
            <button type="button" id="burgerBtn" onclick="VisibilityOfList()"></button>
        </header>
        <div class="container">
            <main>
                @RenderBody()
            </main>
        </div>

        <footer>
            <h6>
                &copy; 2022 - Superheroes - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </h6>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
